<dashboard version="1.1">
<label>Services Overview</label>
<description>Displays all FireMon Services.</description>
<row>
<panel>
<chart>
<title>Service Summary</title>
<search>
<query>
index=firemon sourcetype=firemon:services
| stats count by service_name, service_group
</query>
</search>
<option name="charting.chart">bar</option>
<option name="charting.legend.placement">right</option>
</chart>
</panel>
</row>
<row>
<panel>
<table>
<title>All Services</title>
<search>
<query>
index=firemon sourcetype=firemon:services
| table service_name, service_group, description, status
</query>
</search>
</table>
</panel>
</row>
<row>
<panel>
<!-- FireMon branding logo on far right -->
<html>
<![CDATA[
<div style="text-align:right;">
<img src="/static/appLogo.png" alt="FireMon Logo" width="160" height="40"/>
</div>
]]>
</html>
</panel>
</row>
</dashboard>
